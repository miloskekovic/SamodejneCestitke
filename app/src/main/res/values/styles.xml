<resources>
    
    <style name="calendar_event_style" parent="@android:style/TextAppearance.Small">
        <item name="android:textColor">#FF6600</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">8sp</item>
    </style>

    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
    -->
    <style name="AppBaseTheme" parent="android:style/Theme.Black">
        <!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.
        -->
    </style>

    <!-- Application theme. -->
    <style name="AppTheme" parent="AppBaseTheme">
        <item name="android:windowNoTitle">true</item>
        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
    </style>

    <style name="SpinnerTextViewItem" parent="@android:style/Widget.TextView" >
        <item name="android:spinnerItemStyle">@style/mediumFont</item>
    </style>

    <style name="mediumFont" parent="@android:style/TextAppearance.Medium">
        <item name="android:textColor">#000000</item>
    </style>

    <style name="largeFont" parent="@android:style/TextAppearance.Large">
        <item name="android:textColor">#000000</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="smallFont" parent="@android:style/TextAppearance.Small">
        <item name="android:textColor">#000000</item>
    </style>

</resources>
