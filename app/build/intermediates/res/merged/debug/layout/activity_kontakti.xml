<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/ozadje_za_cestitke"
    tools:context=".KontaktiActivity" >



    <TextView
        android:id="@+id/textViewVsiKontakti"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="15dp"
        android:textColor="@color/crna"
        android:text="@string/textViewVsiKontakti"
        android:gravity="center"
        android:textSize="50sp" />

    <ListView
        android:id="@+id/listViewVsiKontakti"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/textViewVsiKontakti"
        android:textSize="30sp" >

    </ListView>

    

</RelativeLayout>